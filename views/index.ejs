<%- include ('partials/header'); -%> 



<div class="container">
        <header class="jumbotron">

            <div class="container text-center">
                <h1 style="padding: 10px;"><i class="fas fa-utensils"></i>Welcome to MeNU</h1> 
                <p>View our hand-picked Mess in your locality</p>
            </div>
            <hr>
            <a href="/campgrounds/new" class="btn btn-primary btn-large">Enroll new Mess</a>
        </header>

    <div class="row text-center" style="display:flex ;flex-wrap: wrap;">
       
        <% campgrounds.forEach(campground => { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campground.image %> ">
                <div class="caption">
                    <h3><%= campground.name %> </h3>
                </div>
               <p>
                   <a href="/campgrounds/<%= campground._id %>  " class="btn btn-primary"> more info</a>
               </p>
            </div>
            
            
        
        </div>
        <% }) %>
    </div>   

    <script src="https://kit.fontawesome.com/71a5734593.js" crossorigin="anonymous"></script>

</div>
<%- include ('partials/footer'); -%> 